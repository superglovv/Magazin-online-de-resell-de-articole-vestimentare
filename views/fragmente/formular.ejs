<form
  id="form_inreg"
  method="post"
  class="date"
  action="<%= locals.action %>"
  enctype="multipart/form-data"
>
  <p>
    <label>
      Username:
      <input
        type="text"
        name="username"
        id="inp-username"
        value="prof<%= Math.floor(Math.random()*100000) %>"
        required
        pattern="[A-Za-z0-9#_./]+"
      />
    </label>
  </p>
  <p>
    <label>
      Nume:
      <input type="text" name="nume" id="inp-nume" value="Gogulescu" required />
    </label>
  </p>
  <p>
    <label>
      Prenume:
      <input
        type="text"
        name="prenume"
        id="inp-prenume"
        value="Gogu"
        required
      />
    </label>
  </p>
  <p>
    <label>
      Parola:
      <input id="parl" type="password" required name="parola" value="" />
    </label>
  </p>
  <p id="p-reintrod">
    <label>
      Reintroduceti parola:
      <input id="rparl" required type="password" name="rparola" value="" />
    </label>
  </p>
  <% if (locals.utilizator) { %>
  <p id="p-noua-parola">
    <label>
      Parola nouă:
      <input id="noua-parola" type="password" name="noua_parola" />
    </label>
  </p>
  <% } %>
  <!-- <p id="p-reintrod-noua-parola">
    <label>
      Reintroduceți parola nouă:
      <input
        id="reintrod-noua-parola"
        type="password"
        name="reintrod_noua_parola"
      />
    </label>
  </p> -->
  <p>
    <label>
      Email:
      <input
        type="text"
        name="email"
        id="inp-email"
        required
        value="profprofprof007@gmail.com"
        size="50"
      />
    </label>
  </p>
  <p>
    <label>
      Culoare text chat:
      <select name="culoare_chat" id="sel-culoare">
        <option value="red" selected>rosu</option>
        <option value="green">verde</option>
        <option value="blue">albastru</option>
      </select>
    </label>
  </p>
  <p>
    <label>
      Data Nastere:
      <input
        type="date"
        name="data_nastere"
        id="inp-data_nastere"
        size="20"
        value="2001-09-11"
      />
    </label>
  </p>
  <p>
    <label>
      Ocupatie:
      <select name="ocupatie" id="sel-ocupatie">
        <option value="nu doresc sa spun" selected>Nu doresc sa spun</option>
        <option value="freelancer">Freelancer</option>
        <option value="designer">Designer</option>
        <option value="arhitect">Arhitect</option>
        <option value="cowboy">Cowboy</option>
      </select>
    </label>
  </p>

  <p>
    <label> Poza: <input type="file" name="poza" /> </label>
  </p>

  <p>
    <input type="submit" value="Trimite" />
    <input type="reset" value="Reseteaza" />
  </p>
</form>
